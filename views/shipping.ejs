<div class="row mt-5">
  <div class="col-md-8 mb-4">
    <div class="card mb-4">
      <div class="card-header py-3">
        <h5 class="mb-2 d-flex justify-content-center display-6">
          Add Shipping Address
        </h5>
      </div>
      <div class="card-body">
        <form>
          <!-- 2 column grid layout with text inputs for the first and last names -->
          <div class="row mb-2">
            <div class="col">
              <div class="form-outline">
                <label class="form-label">First name</label>
                <input type="text" class="form-control" />
              </div>
            </div>
            <div class="col">
              <div class="form-outline">
                <label class="form-label">Last name</label>
                <input type="text" class="form-control" />
              </div>
            </div>
          </div>
          <!-- 2 column grid layout with text inputs for the phone and number -->
          <div class="row mb-2">
            <div class="col">
              <div class="form-outline">
                <label class="form-label">Phone Number</label>
                <input type="text" class="form-control" />
              </div>
            </div>
            <div class="col">
              <div class="form-outline">
                <label class="form-label">Email Address</label>
                <input type="text" class="form-control" />
              </div>
            </div>
          </div>

          <!-- Text input -->
          <div class="form-outline mb-2">
            <label class="form-label">Company name</label>
            <input type="text" class="form-control" />
          </div>

          <!-- Text input -->
          <div class="form-outline mb-2">
            <label class="form-label">Address</label>
            <input type="text" class="form-control" />
          </div>

          <!-- Checkbox -->
          <div class="form-check mb-2">
            <input
              class="form-check-input me-2"
              type="checkbox"
              value=""
              checked
            />
            <label class="form-check-label"> Save Address? </label>
          </div>
        </form>
      </div>
    </div>
  </div>

  <div class="col-md-4 mb-4">
    <div class="card mb-4">
      <div class="card-header py-3">
        <h5 class="mb-2 d-flex justify-content-center display-6">
          Order Summary
        </h5>
      </div>
      <div class="card w-25 img-shipping">
        <img src="/css/images/shirt2.png" alt="Shirt" />
      </div>
      <div class="card-body">
        <ul class="list-group list-group-flush">
          <li
            class="
              list-group-item
              d-flex
              justify-content-between
              align-items-center
              border-0
              px-0
              pb-0
            "
          >
            Products
            <span>$53.98</span>
          </li>
          <li
            class="
              list-group-item
              d-flex
              justify-content-between
              align-items-center
              px-0
            "
          >
            Shipping
            <span>Gratis</span>
          </li>
          <li
            class="
              list-group-item
              d-flex
              justify-content-between
              align-items-center
              border-0
              px-0
              mb-3
            "
          >
            <div>
              <strong>Total amount</strong>
              <strong>
                <p class="mb-0">(including TAX)</p>
              </strong>
            </div>
            <span><strong>$53.98</strong></span>
          </li>
        </ul>

        <button type="button" class="btn btn-primary form-control btn-block">
          Place Order
        </button>
      </div>
    </div>
  </div>
</div>
